<% include ./partials/header %>
  <div class="inverse-masonry-margin masonry-layout-content">
    <h1>Fill out this out for others to solve!</h1>
    <p><%= error %></p>
  </div>

  <form action="/quizmaker/<%= username %>" method="post" id="quizmakerform">
    <div class="masonry-layout quizmaker">
      <div class="masonry-layout-panel ">
        <div class="masonry-layout-content ">
          <label for="color">Your favorite color</label>
          <input type="text" name="color" /><br>

          <label for="currentage">Your current age</label>
          <input type="number" name="currentage" /><br>

          <label for="crush">Who is your current crush?</label>
          <input type="text" name="crush" /><br>

          <label for="movie">Your favorite movie</label>
          <input type="text" name="movie" /><br>

          <label for="pet">How many total pets have you owned?</label>
          <input type="number" name="pet" /><br>

          <label for="snack">What is your favorite snack?</label>
          <input type="text" name="snack" /><br>

          <label for="enemy">Who is your enemy?</label>
          <input type="text" name="enemy" /><br>

          <label for="song">What is your favorite song?</label>
          <input type="text" name="favsong" /><br>

          <label for="song">What song would make you cry?</label>
          <input type="text" name="sadsong" /><br>
        </div>
      </div>
    </div>
    <div class="inverse-masonry-margin masonry-layout-content">

      <textarea name="message" form="quizmakerform">Enter a message here to send to all of your quiz-takers!</textarea><br>
      <input type="submit" name="Make quiz for others to take!" />
    </div>
  </form>
  <% include ./partials/footer %>
